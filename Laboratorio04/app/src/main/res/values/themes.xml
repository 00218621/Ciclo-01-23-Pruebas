<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Laboratorio04" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_variant_color</item>
        <item name="colorPrimaryVariant">@color/main_variant_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_color</item>
        <item name="colorSecondaryVariant">@color/main_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MyTextField" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="boxStrokeColor">@color/main_color</item>
        <item name="hintTextColor">@color/main_color</item>
        <item name="backgroundColor">@color/white</item>
    </style>
</resources>